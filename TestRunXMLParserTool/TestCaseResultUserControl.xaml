<UserControl x:Class="TestRunXMLParserTool.TestCaseResultUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestRunXMLParserTool"
             xmlns:converters="clr-namespace:TestRunXMLParserTool.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="300">
	<UserControl.Resources>
		<converters:StatusToColorConverter x:Key="StatusToColorConverter" />
	</UserControl.Resources>
	<Grid>
		<StackPanel Background="{Binding Path=Result, Converter={StaticResource StatusToColorConverter}}" Margin="5">
			<TextBlock FontSize="18" Text="{Binding Path=Name}" />
		</StackPanel>
	</Grid>
</UserControl>
