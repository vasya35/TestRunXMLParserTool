<Window x:Class="TestRunXMLParserTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestRunXMLParserTool"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="0.1*" />
			<RowDefinition Height="0.9*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="0.5*" />
			<ColumnDefinition Width="0.5*" />
		</Grid.ColumnDefinitions>

		<ListBox Grid.Column="0" Grid.Row="1" ItemsSource="{Binding TestCaseResults}" SelectedItem="{Binding SelectedTestCaseResult}">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<!--<StackPanel Margin="5">-->
						<!--<TextBlock FontSize="18" Text="{Binding Path=Name}" />-->
					<local:TestCaseResultUserControl DataContext="{Binding}" />
					<!--</StackPanel>-->
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
		
	</Grid>
</Window>
